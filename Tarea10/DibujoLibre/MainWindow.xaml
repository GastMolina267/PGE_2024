<Window x:Class="DibujoLibre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dibujo Libre" Height="450" Width="800">
    <Grid>
        <!-- Lienzo donde el usuario puede dibujar -->
        <Canvas Name="DibujoCanvas" Background="White"
                MouseDown="DibujoCanvas_MouseDown"
                MouseMove="DibujoCanvas_MouseMove"
                MouseUp="DibujoCanvas_MouseUp"/>
    </Grid>
</Window>
